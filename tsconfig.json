{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": false,
    "sourceMap": true,
    "target": "ESNext",
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxt/content",
      "nuxt-i18n",
      "nuxt-windicss"
    ],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/index.ts"]
}
